{% extends 'base.html.twig' %}

{% block titre %}Nouveau Livre
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Ajouter un Nouveau Livre</h1>
		{{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.titre) }}
			{{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.auteur) }}
			{{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.datePublication) }}
			{{ form_widget(form.datePublication, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.summary) }}
			{{ form_widget(form.summary, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.reference) }}
			{{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
		</div>
		<button type="submit" class="btn btn-primary">Ajouter</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
