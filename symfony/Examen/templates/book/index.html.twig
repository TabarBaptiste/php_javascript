{% extends 'base.html.twig' %}

{% block title %}Liste de livres
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Liste de livres par autheur</h1>

		<ul class="list-group">
			{% for book in books %}
				<a href="{{ path('book_show', {'id': book.id}) }}">
					<li class="list-group-item">
						{{ book.titre }}
						par
						{{ book.auteur }}
					</li>
				</a>
			{% endfor %}
		</ul>

		<a href="{{ path('book_new') }}" class="btn btn-primary mt-3">Ajouter un nouveau livre</a>
	</div>
{% endblock %}
