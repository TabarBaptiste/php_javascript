{% extends 'base.html.twig' %}

{% block title %}{{ book.titre }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ book.titre }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Auteur:</strong> {{ book.auteur }}</p>
                <p><strong>Date de Publication:</strong> {{ book.datePublication|date('d/m/Y') }}</p>
                <p><strong>Résumé:</strong> {{ book.summary }}</p>
                <p><strong>Référence:</strong> {{ book.reference }}</p>
            </div>
        </div>

        {# Ajoute un bouton pour revenir à la liste des livres #}
        <a href="{{ path('app_book') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
    </div>
{% endblock %}
